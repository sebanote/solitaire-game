{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Jest Test (Root Config)",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": [
          "--runInBand",
          "--config",
          "jest.config.js",
          "--testPathPattern",
          "${file}"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }